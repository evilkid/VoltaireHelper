{
    "manifest_version": 2,
    "name": "Voltaire Helper",
    "version": "1",
    "description": "Helps you with voltaire quiz",
    "browser_action": {
        "name": "Voltaire Helper",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "js": ["jquery.js", "background.js"],
        "matches": ["http://*/*", "https://*/*"]
    }],
	"background":{
		"scripts": ["commands.js", "jquery.js"],
		"persistent": true
    },
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "commands": {
        "toggle-feature-foo": {
            "suggested_key": {
                "default": "Ctrl+Q"
            },
            "description": "Toggle feature foo"
        }
    }
}